{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended" // Basic rules
    ],
    "parserOptions": {
        "ecmaVersion": 12, // ES2021 support
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-unused-vars": "warn",
        "no-console": "off"
    }
}